execute pathogen#infect()
filetype on
syntax on
colorscheme happy_hacking
set guifont=Menlo\ Regular:h18
set colorcolumn=90
set textwidth=79
set number
set hidden
set history=100
filetype indent on
set tabstop=2
set shiftwidth=2
set expandtab
"set smartindent
"set autoindent
set hlsearch
set showmatch
set laststatus=2
set noshowmode
imap jk <Esc>
